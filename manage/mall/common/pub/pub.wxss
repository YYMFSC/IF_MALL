.item-block {
    width: 229rpx;
    height: 379rpx;
    border-top: solid 1rpx #eee;
    padding: 10rpx;
}
.item-block .proName {
    height: 70rpx;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.item-block .pic image {
    width: 220rpx;
    height: 220rpx;
}

.item-block .buy {
    display: flex;
    margin-top: 15rpx;
}

.item-block .buy .price {
    flex-grow: 4;
}

.item-block .buy .add {
    flex-grow: 1;
    padding-top: 8rpx;
    width: 50rpx;
}
/* address */
.deliver-address {
    height: 90rpx;
    padding: 15rpx 20rpx;
    line-height: 50rpx;
    display: flex;
}
.deliver-address .location {
    align-self: center;
    margin: 0 15rpx;
}
.line {
    height: 4rpx;
    background: url('http://static.dmall.com/kayak-project/cart/dist/cart/common/image/shoppingline.png') repeat-x 0 0;
    background-size: auto 4rpx;
}