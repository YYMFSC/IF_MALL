/* pages/cart/cart.wxss */
@import "../../common/pub/pub.wxss";

#main {
    padding-bottom: 105rpx;
    min-height: 1000rpx;
}

.cart .item {
    margin-top: 15rpx;
    border-bottom: solid 1rpx #eee;
}

.cart .item .checkbox {
    margin: 0 10rpx;
}
.cart .item .shop {
    display: flex;
    height: 50tpx;
    padding: 10rpx 0rpx;
    line-height: 50rpx;
    border-top: solid 1rpx #eee;
    border-bottom: solid 1rpx #eee;
}
.cart .item .shop .shopName {
    height: 60rpx;
    line-height: 60rpx;
    margin-left: 10rpx;
}
.cart .item .shop .shopIcon {
    width: 60rpx;
    height: 60rpx;
    border: solid 2rpx #eee
}

.cart .item .cartList .pro {
    display: flex;
    height: 125rpx;
}
.cart .item .cartList .pro .icon {
    width: 60rpx;
    align-self: center;
}
.cart .item .cartList .pro .proInfo {
    flex-grow: 6;
    width: 440rpx;
    padding: 20rpx 0;
}
.cart .item .cartList .pro .proInfo .proName {
    height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis; 
    white-space:nowrap;
}
.cart .item .cartList .pro .proInfo .price {
    margin-top: 10rpx;
}
.cart .item .cartList .pro .count {
    display: flex;
    flex-grow: 3;
}
.cart .item .cartList .pro .count .num {
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    align-self: center;
    text-align: center;
}
.cart .item .summary {
    display: flex;
    align-items: center;
    border-top: solid 1rpx #eee;
}
.cart .item .summary .paymentInfo {
    width: 510rpx;
    padding: 20rpx 30rpx;
}
.cart .item .summary .confirm {
    width: 160rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    border-radius: 10rpx;
}








