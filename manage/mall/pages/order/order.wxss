/* pages/order/order.wxss */
@import "../../common/pub/pub.wxss";
#main .classify {
    z-index: 99;
    width: 100%;
    position: fixed;
    top: 0;
    display: flex;
    justify-content: space-around;
}
#main .classify .item {
    text-align: center;
    width: 100%;
    height: 85rpx;
    line-height: 80rpx;
    border-bottom: solid 5rpx #F6F6F6;
}
#main .classify .item.current {
    border-bottom:  solid 5rpx #f5692e;
}
.order .item {
    padding: 10rpx 0 20rpx 0;
    margin: 15rpx 20rpx 0 20rpx;
    border: solid 1rpx #eee;
    border-radius: 20rpx;
    position: relative;
}
.order .item .tag{
    position: absolute;
    right: 30rpx;
    top: 25rpx;
}
.order .item .shop {
    display: flex;
    height: 50tpx;
    padding: 10rpx 20rpx;
    line-height: 50rpx;
    border-bottom: solid 1rpx #eee;
}
.order .item .shop .shopName {
    height: 60rpx;
    line-height: 60rpx;
    margin-left: 10rpx;
}
.order .item .shop .shopIcon {
    width: 60rpx;
    height: 60rpx;
    border: solid 2rpx #eee
}
.order .item .proList .summary {
    margin-right: 20rpx;
    text-align: right;
    height: 50rpx;
    line-height: 50rpx;
}
.order .item .btn-area {
    margin-top: 10rpx;
    display: flex;
    justify-content: flex-end;
    padding: 0 20rpx;
}
.order .item .btn-area .btn {
    width: 150rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border: solid 1rpx #f5692e;
    border-radius: 10rpx;
}