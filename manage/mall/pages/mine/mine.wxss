#head .user {
    display: flex;
    padding: 20rpx 30rpx;
}
#head .user .photo image {
    width: 120rpx;
    height: 120rpx;
    border: solid #E2AEA2 5rpx;
    border-radius: 50%;
}
#head .user .userInfo {
    margin-left: 30rpx;
    padding-top: 20rpx;
    color: white;
    font-size: 32rpx;
}
#head .user .userInfo .brand {
    margin-left: 30rpx;
    padding: 0rpx 10rpx;
    border-radius: 30rpx;
}
#head .account {
    margin-top: 50rpx;
    display: flex;
    width: 100%;
    padding: 10rpx;
}
#head .account .item {
    flex-grow: 1;
    text-align: center;
    width: 120rpx;
}

.degree-0 { background-color: #666; } 
.degree-1 { background-color: #FFB37C; } 
.degree-2 { background-color: #92D1E5; } 
.degree-3 { background-color: #FFB37C; } 
.degree-4 { background-color: #FF6C00; } 
.degree-5 { background-color: #FF0000; } 
.degree-6 { background-color: #E52FEE; } 
.degree-7 { background-color: #841BFB; } 
.degree-8 { background-color: #141414; } 

.rows {
    border-top: solid 1rpx #eee;
    margin-top: 20rpx;
    background-color: white;
}
.rows .item {
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: solid 1rpx #eee;
    padding: 10rpx 0;
    display: flex;
}
.rows .item .icon {
    width: 60rpx;
    margin: 0 20rpx;
}

